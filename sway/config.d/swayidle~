### Idle configuration
exec swayidle -w \
     timeout 120 'swaylock -f -i /home/teirdes/.config/sway/images/jakub-rozalski-1920-dog-in-the-fog.jpg -s fill' \
     timeout 300 'swaymsg "output * dpms off"' \
          resume 'swaymsg "output * dpms on"' \
     before-sleep 'swaylock -f -c 000000'

   # Lock screen
   bindsym $mod+l exec swaylock -f -i /home/teirdes/.config/sway/images/jakub-rozalski-1920-dog-in-the-fog.jpg -s fill